{% extends 'backend/back.html.twig' %}

{% block title %}Ajouter un film{% endblock %}

{% block nav_admin %}active{% endblock %}
{% block subnav_movie %}active{% endblock %}

{% block body %}

    <h1>Ajouter un film</h1>

    {# Balise ouverture du form #}
    {{ form_start(form, {'attr': {novalidate: 'novalidate', id: 'movie-form'}}) }}

        {# Affiche tous les champs du form #}
        {# form_widget(form) #}

        {# Affiche un champ #}
